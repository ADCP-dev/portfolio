---
import Navbar from "../components/Navbar.vue";
import portfolio from "../img/projects/portfolio.jpg";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="light dark" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Portfolio de Adrian Colom, Estudiante de IA y big data, trabajador backend con conocimientos frontend y competidor en el mundo de la programación."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/portfolio/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:title" content="Portfolio de Adrián Colom Palacios" />
    <meta property="og:description" content="Portfolio de Adrian Colom, Estudiante de IA y big data, trabajador backend con conocimientos frontend y competidor en el mundo de la programación." />
    <meta property="og:image" content={portfolio.src} />
    <meta property="og:url" content="https://calasanao.github.io/" />
    <meta property="og:type" content="website" />
  </head>
  <body>
    <Navbar client:load />

    <slot />
  </body>
</html>
<style is:global>
  /* Unscoped, delivered as-is to the browser. */
  html {
    scroll-behavior: smooth;
  }
  .scroll-margin-id {
    scroll-margin-top: 115px;
  }
</style>
