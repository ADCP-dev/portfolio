---
import ProjectCard from "./ProjectCard.astro";
import { projects } from "./ProjectsData";
interface Props {
  boxStyleClass: string;
}

const { boxStyleClass } = Astro.props;

---

<article
  class=`col-span-1 md:col-span-4 md:col-start-1 shadow-lg rounded-3xl bg-gradient-to-b from-base-100 to-base-200 card hover:shadow-[5px_5px_0px_0px] hover:shadow-primary duration-500`
>
  <ProjectCard {...projects[0]} />
</article>

<article class=`col-span-1 md:col-span-4 md:col-start-5 shadow-lg rounded-3xl bg-gradient-to-b from-base-100 to-base-200 card hover:shadow-[5px_5px_0px_0px] hover:shadow-info duration-500`>
  <ProjectCard {...projects[1]} />
</article>

<article class=`col-span-1 md:col-span-4 md:col-start-9 flex ${boxStyleClass}`>
  <div class="text-3xl font-extrabold">
    <div class="indicator">
      <p class="text-center">
        <span
          class="bg-clip-text text-transparent bg-gradient-to-r from-accent to-info animate-[pulse_5s_ease-in-out_infinite]"
        >
          Próximamente
        </span>
      </p>
    </div>
  </div>
</article>

