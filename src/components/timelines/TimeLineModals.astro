---
import { TimeLineProps } from "./TimeLineData";
---

<div>
  {
    TimeLineProps.map((modal) => (
      <dialog id={modal.id} class="modal">
        <div class="modal-box bg-base-200">
          <h3 class="font-bold text-xl text-center">{modal.title}</h3>
          <p class="py-4 text-center">{modal.description}</p>
          <div class="flex justify-center items-center mt-2">
            <img
              src="https://media.licdn.com/dms/image/C4D0BAQEeHqmjPE3xgQ/company-logo_200_200/0/1630534696064/clicktotravel_logo?e=2147483647&v=beta&t=84FGfjhKft-rRhUAZzgP3sg6d8tyX_9BeADYo4H0FJg"
              alt="ClickToTravel"
              class="w-1/3 mask mask-squircle"
            />
          </div>

          <div class="modal-action">
            <form method="dialog">
              <button class="btn btn-info" tabindex="0">
                Cerrar
              </button>
            </form>
          </div>
        </div>
      </dialog>
    ))
  }
</div>
